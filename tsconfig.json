{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": false,
    "checkJs": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "types": [
      "jest",
      "node"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "index.js",
    "types.d.ts",
    "packages/**/*.ts",
    "test/**/*.ts"
  ]
}
  